@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Clienta.ViewModels.RegistrationViewModel
@{
    ViewData["Title"] = "Register an account";
}

<fieldset>
    <div class="d-flex justify-content-center">
        <div class="flex-column align-self-center text-center border border-light rounded bg-light p-5 m-5 w-25em">
            <form role="form" asp-action="Register">
                <h2>Register an account</h2>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="validation-summary alert alert-danger alert-dismissible" role="alert"> </div>
                }

                <div class="form-group flex-row">
                    <label asp-for="Email"></label>
                    <input type="email" asp-for="Email" class="form-control"/>
                    
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else</small>
                </div>

                <div class="form-group flex-row">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control"/>
                </div>

                <div class="form-group flex-row">
                    <label asp-for="ConfirmPassword"></label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control"/>
                </div>

                <div class="form-group flex-row d-flex justify-content-center mt-4">
                    <label>&nbsp;</label>
                    <button type="submit" class="btn btn-primary">Register!</button>
                </div>
            </form>
        </div>
    </div>
</fieldset>